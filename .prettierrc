{
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "semi": true,
    "useTabs": false,
    "jsxSingleQuote": false,
    "quoteProps": "as-needed",
    "htmlWhitespaceSensitivity": "strict",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "arrowParens": "avoid"
            }
        },
        {
            "files": "*.vue",
            "options": {
                "printWidth": 120,
                "arrowParens": "always"
            }
        },
        {
            "files": "*.ts",
            "options": {
                "arrowParens": "always",
                "tabWidth": 2,
                "printWidth": 120,
                "semi": true
            }
        }
    ]
}
